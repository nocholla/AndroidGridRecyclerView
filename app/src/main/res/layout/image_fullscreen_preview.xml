<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Begin Full Screen Image Section -->
    <ImageView
        android:id="@+id/image_preview"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_height_four_hundred_fifty"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter" />
    <!-- Begin Full Screen Image Section -->

    <!-- Begin Close Image Section -->
    <RelativeLayout
        android:id="@+id/headerClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" >

        <ImageButton
            android:id="@+id/closeImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_close"
            android:layout_marginLeft="@dimen/margin_fifty"
            android:layout_marginTop="@dimen/margin_fourteen"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="false"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
    <!-- End Close Image Section -->

</RelativeLayout>